  "paths": {
    "/roles": {
      "post": {
        "tags": ["Role"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created.",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "id": {
                      "type":"string"
                    },
                    "name": {
                      "type":"string"
                    },
                    "created_at": {
                      "type":"string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role already exists."
          }
        }
      },
      "get": {
        "tags": ["Role"],
        "summary": "List all roles",
        "description": "Returns all roles paginated.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of the page",
            "required": false,
            "schema":{
              "type":"number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of registers per page",
            "required": false,
            "schema":{
              "type":"number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content":{
              "application/json":{
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "debf66eb-d940-439e-aa82-137d9b8f21a6",
                      "name": "Users",
